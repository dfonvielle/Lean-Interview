               <div class="span6">
                  <%= f.text_field :other_solutions_for_prob_3, :class => "span6" %>
               </div>         
             </div>
             
             <br />
             
             <div class="row">
               <div class="span4">
                  <%= f.label :solution_importance_for_prob_3, "A better solution to this problem is:" %>
               </div>
               <div class="span2">
                  <%= f.radio_button :solution_importance_for_prob_3, no_need %> <%= no_need %>
               </div>
               <div class="span2">
                  <%= f.radio_button :solution_importance_for_prob_3, nice %> <%= nice %>
               </div>              
               <div class="span2">
                  <%= f.radio_button :solution_importance_for_prob_3, must %> <%= must %>
               </div>             
             </div>
          </fieldset>
        </div>
      </fieldset>
      
      
      <br />
      <br />
      <br />
      
    <fieldset>
      <legend>Problem Ranking</legend>
      
      <div class="alert">
        
        <div class="row">
          
          <div class="span2 offset4">
            <%= big_1 %>
          </div>
          
          <div class="span2">
            <%= big_2 %>
          </div>
          
          <div class="span2">
            <%= big_3 %>
          </div>
          
        </div>
        
        <br />
        
        <div class="row">
          
          <div class="span4">
            <%= f.label :problem_1_ranking, @hypothetical_problem.description_1 %>
          </div>
          
          <div class="span2">
            <%= f.radio_button :problem_1_ranking, big_1 %>
          </div>
          
          <div class="span2">
            <%= f.radio_button :problem_1_ranking, big_2 %>
          </div>
            
          <div class="span2">
            <%= f.radio_button :problem_1_ranking, big_3 %>
          </div>    
          
        </div>
        
        
        <div class="row">
          
          <div class="span4">
            <%= f.label :problem_2_ranking, @hypothetical_problem.description_2 %>
          </div>
          
          <div class="span2">
            <%= f.radio_button :problem_2_ranking, big_1 %>
          </div>
          
          <div class="span2">
            <%= f.radio_button :problem_2_ranking, big_2 %>
          </div>
            
          <div class="span2">
            <%= f.radio_button :problem_2_ranking, big_3 %>
          </div>    
          
        </div>

        <div class="row">
          
          <div class="span4">
