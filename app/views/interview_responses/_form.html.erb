<%= simple_form_for([@interview, @interview_response],:html => {:class => 'form-vertical' }) do |f| %>
  <%= f.error_notification %>

    <div class="form-inputs">
   
    <div class="hidden-field">
         <%= f.hidden_field :interview_id, :value => @interview.id %>
    </div>
   
    <div class="hidden-field">
         <%= f.hidden_field :project_id, :value => @project.id %>
    </div>
    
    
    
    
      <fieldset>
        <legend>Problem Investigation</legend> <br />
        
        
        <div class="alert alert-info">
          <fieldset>
            <legend>Problem 1: <%= @hypothetical_problem.description_1 %></legend>
             <br />
             
             <div class="row">
               <div class="span4">
                 <%= f.label :customer_solution_1_for_prob_1, "Current solutions used to solve the problem:" %>
               </div>
               <div class="span2">
                  <%= f.check_box :customer_solution_1_for_prob_1 %>
                  <%= @hypothetical_problem.predicted_solution_1_for_prob_1 %>
               </div>
               <div class="span2">
                  <%= f.check_box :customer_solution_2_for_prob_1 %>
                  <%= @hypothetical_problem.predicted_solution_2_for_prob_1 %>
               </div>              
               <div class="span2">
                  <%= f.check_box :customer_solution_3_for_prob_1 %>
                  <%= @hypothetical_problem.predicted_solution_3_for_prob_1 %> 
               </div>             
             </div>
             
             <br />
             
             <div class="row">
               <div class="span4">
                  <%= f.label :other_solutions_for_prob_1, "Other solutions used:" %>
               </div>        
               <div class="span6">
                  <%= f.text_field :other_solutions_for_prob_1, :class => "span6" %>
               </div>         
             </div>
             
             <br />
             
             <div class="row">
               <div class="span4">
                  <%= f.label :solution_importance_for_prob_1, "A better solution to this problem is:" %>
               </div>
               <div class="span2">
                  <%= f.radio_button :solution_importance_for_prob_1, no_need %> <%= no_need %>
               </div>
               <div class="span2">
                  <%= f.radio_button :solution_importance_for_prob_1, nice %> <%= nice %>
               </div>              
               <div class="span2">
                  <%= f.radio_button :solution_importance_for_prob_1, must %> <%= must %>
               </div>             
             </div>
          </fieldset>
        </div>


        <div class="alert alert-info">
          <fieldset>
            <legend>Problem 2: <%= @hypothetical_problem.description_2 %></legend>
             <br />
             
             <div class="row">
               <div class="span4">
                 <%= f.label :customer_solution_1_for_prob_2, "Current solutions used to solve the problem:" %>
               </div>
               <div class="span2">
                  <%= f.check_box :customer_solution_1_for_prob_2 %>
                  <%= @hypothetical_problem.predicted_solution_1_for_prob_2 %>
               </div>
               <div class="span2">
                  <%= f.check_box :customer_solution_2_for_prob_2 %>
                  <%= @hypothetical_problem.predicted_solution_2_for_prob_2 %>
               </div>              
               <div class="span2">
                  <%= f.check_box :customer_solution_3_for_prob_2 %>
                  <%= @hypothetical_problem.predicted_solution_3_for_prob_2 %> 
               </div>             
             </div>
             
             <br />
             
             <div class="row">
               <div class="span4">
                  <%= f.label :other_solutions_for_prob_2, "Other solutions used:" %>
               </div>        
               <div class="span6">
                  <%= f.text_field :other_solutions_for_prob_2, :class => "span6" %>
               </div>         
             </div>
             
             <br />
             
             <div class="row">
               <div class="span4">
                  <%= f.label :solution_importance_for_prob_2, "A better solution to this problem is:" %>
               </div>
               <div class="span2">
                  <%= f.radio_button :solution_importance_for_prob_2, no_need %> <%= no_need %>
               </div>
               <div class="span2">
                  <%= f.radio_button :solution_importance_for_prob_2, nice %> <%= nice %>
               </div>              
               <div class="span2">
                  <%= f.radio_button :solution_importance_for_prob_2, must %> <%= must %>
               </div>             
             </div>
          </fieldset>
        </div>

        <div class="alert alert-info">
          <fieldset>
            <legend>Problem 3: <%= @hypothetical_problem.description_3 %></legend>
             <br />
             
             <div class="row">
               <div class="span4">
                 <%= f.label :customer_solution_1_for_prob_3, "Current solutions used to solve the problem:" %>
               </div>
               <div class="span2">
                  <%= f.check_box :customer_solution_1_for_prob_3 %>
                  <%= @hypothetical_problem.predicted_solution_1_for_prob_3 %>
               </div>
               <div class="span2">
                  <%= f.check_box :customer_solution_2_for_prob_3 %>
                  <%= @hypothetical_problem.predicted_solution_2_for_prob_3 %>
               </div>              
               <div class="span2">
                  <%= f.check_box :customer_solution_3_for_prob_3 %>
                  <%= @hypothetical_problem.predicted_solution_3_for_prob_3 %> 
               </div>             
             </div>
             
             <br />
             
             <div class="row">
               <div class="span4">
                  <%= f.label :other_solutions_for_prob_3, "Other solutions used:" %>
