          </div>
          
          <div class="span2">
            <%= f.radio_button :problem_3_ranking, big_1 %>
          </div>
          
          <div class="span2">
            <%= f.radio_button :problem_3_ranking, big_2 %>
          </div>
            
          <div class="span2">
            <%= f.radio_button :problem_3_ranking, big_3 %>
          </div>    
          
        </div>      
        
      </div>
      
      
    </fieldset>
    
    
      <br />
      <br />
      <br />
      
    <fieldset>
      <legend>Customer Segment</legend>
      
      <div class="alert alert-success">
        
        <div class="row">
          <div class="span4">
            <%= f.label :customer_segment_1, "Belongs to the following customer segments:" %>
          </div>
          <div class="span2">
             <%= f.check_box :customer_segment_1 %>
             <%= @customer_segment_prediction_list.customer_segment_1_prediction %>
          </div>
          <div class="span2">
             <%= f.check_box :customer_segment_2 %>
             <%= @customer_segment_prediction_list.customer_segment_2_prediction %>
          </div>              
          <div class="span2">
             <%= f.check_box :customer_segment_3 %>
             <%= @customer_segment_prediction_list.customer_segment_3_prediction %> 
          </div>             
        </div>
        
        <br />
   
        <div class="row">
          <div class="span4">
             <%= f.label :other_customer_segments, "Other customer segments:" %>
          </div>        
          <div class="span6">
             <%= f.text_field :other_customer_segments, :class => "span6" %>
          </div>         
        </div>     
        
      </div>
      
      
    </fieldset>
      
      
      <br />
      <br />
      
      <fieldset>
        <legend>Additional Notes</legend>

        <div class="alert alert-success">

          <div class="row">
            <div class="span12">
              <%= f.text_field :additional_notes, :class => "span12" %>
            </div>
          
          </div>

        </div>


      </fieldset>
      
      <fieldset>
        <legend>Possible Early Adopter of "<%= @project.name %>" ?</legend>

        <div class="alert alert-success">

          <div class="row">
            <div class="span2 offset3">
              <%= f.radio_button :possible_early_adopter, "Yes" %> Yes
            </div>
            <div class="span2">
              <%= f.radio_button :possible_early_adopter, "No" %> No
            </div>
            <div class="span2">
              <%= f.radio_button :possible_early_adopter, "Maybe" %> Maybe
            </div>
          
          </div>

        </div>


      </fieldset>
      
    </div>

    <div class="form-actions">
      <%= f.button :submit, :value => "Submit Interview Response", :class => "btn btn-primary" %>
    </div>
<% end %>
